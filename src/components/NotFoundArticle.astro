---
import en from "@locales/en.json";
import pt from "@locales/pt-br.json";

const { lang } = Astro.props;
const locales = { en, pt };
const translations = locales[lang] || pt;
---

<div class="text-center py-16 animate-fadeInUp">
  <div
    class="w-24 h-24 mx-auto mb-6 bg-gray-200 dark:bg-gray-700 rounded-full flex items-center justify-center"
  >
    <svg
      class="w-12 h-12 text-gray-400"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
      ></path>
    </svg>
  </div>
  <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
    {translations.notFoundArticle.title}
  </h3>
  <p class="text-gray-600 dark:text-gray-300">
    {translations.notFoundArticle.description}
  </p>
</div>
