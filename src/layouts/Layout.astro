---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en" class="overflow-y-hidden">
  <head>
    <script is:inline>
      (function applyTheme() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else if (theme === 'light') {
          document.documentElement.classList.remove('dark');
        } else {
          const prefersDark = window.matchMedia(
            '(prefers-color-scheme: dark)',
          ).matches;
          document.documentElement.classList.toggle('dark', prefersDark);
        }
      })();
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/src/assets/icon-cv.png" />
    <link rel="icon" type="image/svg+xml" href="/src/assets/" />
    <meta
      name="description"
      content="Frontend developer portfolio - Carlos Vinicius (Skittz)"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Roboto:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&family=Crimson+Text:ital,wght@0,400;0,600;1,400;1,600&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{`Portfolio {Carlos Vinicius}`}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<ClientRouter />
<script is:inline>
  document.addEventListener('astro:after-swap', () => {
    const theme = localStorage.getItem('theme');
    const prefersDark = window.matchMedia(
      '(prefers-color-scheme: dark)',
    ).matches;
    const isDark = theme === 'dark' || (!theme && prefersDark);
    document.documentElement.classList.toggle('dark', isDark);
  });
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  html {
    color-scheme: light dark;
  }
</style>
